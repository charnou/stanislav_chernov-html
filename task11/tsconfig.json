{
    "compilerOptions": {
        "target": "es6",
        "module" : "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "sourceMap": true,
        "watch": false,
        "noEmitOnError": true,
    },
    "include": [
        "./**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}